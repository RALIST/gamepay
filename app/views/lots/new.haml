.container.mt-5
  .row.justify-content-center
    .col-4
      %h2.text-center Create lot
      = form_for [:game, @lot] do |f|
        .form-group
          = f.label :name
          = f.text_field :name, class: 'form-control'
        .form-group
          = f.label :description
          = f.text_area :description, class: 'form-control'
        .form-group
          = f.label :price
          = f.number_field :price, class: 'form-control'
        .form-group
          = f.submit 'Create', class: 'btn btn-block btn-success'

